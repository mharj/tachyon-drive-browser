{
    "name": "tachyon-drive-browser",
    "version": "0.3.0",
    "description": "Browser module for tachyon storage driver implementation",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.mjs",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts --clean",
        "prepublishOnly": "npm run build",
        "test": "nyc mocha",
        "coverage": "nyc report --reporter=lcovonly",
        "lint": "eslint src"
    },
    "files": [
        "dist"
    ],
    "repository": "github:mharj/tachyon-drive-browser",
    "keywords": [
        "storage",
        "driver",
        "nodejs"
    ],
    "mocha": {
        "exit": true,
        "extension": [
            "ts",
            "js"
        ],
        "recursive": true,
        "require": [
            "ts-node/register",
            "source-map-support/register"
        ],
        "reporters": [
            "spec",
            "mocha-junit-reporter"
        ]
    },
    "author": "mharj",
    "license": "MIT",
    "devDependencies": {
        "@types/chai": "^4.3.11",
        "@types/chai-as-promised": "^7.1.8",
        "@types/mocha": "^10.0.6",
        "@types/node": "^18",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "chai": "^4.4.1",
        "chai-as-promised": "^7.1.1",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-deprecation": "^2.0.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-sonarjs": "^0.23.0",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0",
        "prettier": "^3.2.4",
        "ts-node": "^10.9.2",
        "tsup": "^8.0.1",
        "typescript": "^5.3.3",
        "zod": "^3.22.4"
    },
    "dependencies": {
        "@avanio/logger-like": "^0.1.1",
        "tachyon-drive": "^0.6.0",
        "tslib": "^2.6.2"
    }
}
